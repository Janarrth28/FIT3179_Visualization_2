{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Australian Bushfire Trends by State (2017â€“2021)",
      "subtitle": "Total burned units aggregated from forest fire attribute data",
      "anchor": "start",
      "fontSize": 16
    },
    "width": 800,
    "height": 450,
  
    "data": { "url": "fire_summary_2017_2021.csv" },
  
    "mark": {
      "type": "area",
      "line": true,
      "point": true,
      "opacity": 0.75
    },
  
    "encoding": {
      "x": {
        "field": "Year",
        "type": "ordinal",
        "title": "Fire Season (Year)",
        "axis": { "labelAngle": 0, "labelFontSize": 12, "titleFontSize": 14 }
      },
      "y": {
        "aggregate": "sum",
        "field": "BurnCount",
        "title": "Total Burned Units",
        "axis": { "labelFontSize": 12, "titleFontSize": 14 }
      },
      "color": {
        "field": "STATE",
        "type": "nominal",
        "title": "State",
        "scale": { "scheme": "tableau10" },
        "legend": { "orient": "right", "titleFontSize": 13, "labelFontSize": 11 }
      },
      "tooltip": [
        { "field": "STATE", "type": "nominal", "title": "State" },
        { "field": "Year", "type": "ordinal", "title": "Year" },
        { "aggregate": "sum", "field": "BurnCount", "type": "quantitative", "title": "Burned Units", "format": "," }
      ]
    },
  
    "config": {
      "background": "#fafafa",
      "font": "Lato",
      "axis": { "labelColor": "#333", "titleColor": "#333" },
      "legend": { "labelColor": "#333", "titleColor": "#333" },
      "view": { "stroke": null }
    }
  }
  